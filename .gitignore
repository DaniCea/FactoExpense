# Ignore node_modules and build files from frontend
frontend/node_modules/
frontend/dist/
frontend/dist-ssr/
frontend/*.local

# Ignore all editor-specific files (common to both frontend and backend)
.vscode/*
!.vscode/extensions.json
.idea
.DS_Store
*.suo
*.ntvs*
*.njsproj
*.sln
*.sw?

# Ignore logs and debug files from frontend
frontend/logs/
frontend/npm-debug.log*
frontend/yarn-debug.log*
frontend/yarn-error.log*
frontend/pnpm-debug.log*
frontend/lerna-debug.log*

# Ignore logs, temp files, and environment files in backend
backend/.bundle
backend/.env*
backend/log/*
backend/tmp/*
backend/storage/*
backend/tmp/storage/*
backend/tmp/pids/*
backend/config/master.key

# Keep .keep files for empty folders in backend (to keep the structure)
!backend/log/.keep
!backend/tmp/.keep
!backend/storage/.keep
!backend/tmp/storage/.keep
!backend/tmp/pids/.keep

# Ignore general Ruby and Rails specific files
backend/db/*.sqlite3
backend/db/schema.rb
backend/vendor/

# Ignore editor and OS-specific files in backend (if any)
.backend/.idea